{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "inputs": [
    {
      "id": "managerLocation",
      "type": "promptString",
      "description": "Enter the location of the Automation Manager Downloaded"
    },
    {
      "id": "driverInstance",
      "type": "promptString",
      "description": "Enter the Automation Driver Instance"
    },
    {
      "id": "monitorPort",
      "type": "promptString",
      "default": "88",
      "description": "Enter the Monitor Port"
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Manager",
      "program": "${input:managerLocation}/src/index.js",
      "args": [
        "--dev",
        "--config=${input:managerLocation}/config.json",
        "--monitorApplication=${input:managerLocation}/src/monitor.js"
      ],
      "cwd": "${workspaceRoot}",
      "outFiles": [],
      "outputCapture": "std",
      "autoAttachChildProcesses": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Start Driver (AMQP)",
      "program": "${workspaceRoot}/src/index.js",
      "args": [
        "--dev",
        "--id=AutomationDriverInstance/${input:driverInstance}",
        "--mp=${input:monitorPort}",
        "--config=${input:managerLocation}/config.downloaded.json"
      ],
      "cwd": "${workspaceRoot}",
      "outFiles": [],
      "outputCapture": "std"
    },
    {
      "name": "Run tests on AMQP Driver",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/../../node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": [
        "test/integration/**/*.test.js",
        "test/integration/*.test.js",
        "--no-timeouts"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "sourceMaps": true,
      "outputCapture": "std"
    }
  ]
}